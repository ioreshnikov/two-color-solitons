@article{Oreshnikov:15,
author = {I. Oreshnikov and R. Driben and A. V. Yulin},
journal = {Opt. Lett.},
keywords = {Nonlinear optics, fibers; Pulse propagation and temporal solitons ; Bright solitons; Dark solitons; Numerical simulation; Scattering; Shock waves; Solitons},
